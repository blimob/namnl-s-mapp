# ==============================================
# BRF Råstenen Mitt - Production Environment
# ==============================================

# Application
NODE_ENV=production
PORT=3005
BASE_URL=/
MONGODB_URL=mongodb://mongo:27017/brf-rastenen

# Session (använd en stark nyckel!)
SESSION_SECRET=your_super_secure_production_session_key_min_32_chars

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=very_secure_admin_password_here
MONGO_USER=brfuser
MONGO_PASSWORD=very_secure_app_password_here
MONGO_DB_NAME=brf-rastenen

# Firebase Configuration (sätt i GitLab CI/CD variabler)
FIREBASE_API_KEY=${FIREBASE_API_KEY}
FIREBASE_AUTH_DOMAIN=${FIREBASE_AUTH_DOMAIN}
FIREBASE_PROJECT_ID=${FIREBASE_PROJECT_ID}
FIREBASE_STORAGE_BUCKET=${FIREBASE_STORAGE_BUCKET}
FIREBASE_MESSAGING_SENDER_ID=${FIREBASE_MESSAGING_SENDER_ID}
FIREBASE_APP_ID=${FIREBASE_APP_ID}

# Logging
LOG_LEVEL=info

# Optional Nginx
NGINX_ENABLED=false